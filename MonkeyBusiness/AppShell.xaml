<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MonkeyBusiness.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MonkeyBusiness"
    xmlns:view="clr-namespace:MonkeyBusiness.View"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="VerticalStackLayout"
            ContentTemplate="{DataTemplate view:VerticalStackLayoutPage}"
            Route="VerticalStackLayoutPage" />
    </TabBar>
</Shell>
